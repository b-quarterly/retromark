<!DOCTYPE html>
<html lang="<%= config.language || 'en-US' %>">
<head>
    <%- include('../components/header') %>
    <title><%= page.frontMatter.title || config.title %></title>
</head>
<body class="theme-vaporwave">

    <div class="vaporwave-container">
        <header class="vaporwave-header">
            <h1 class="glitch" data-text="<%= config.title %>"><%= config.title %></h1>
            <%- include('../components/header', { config: config, page: page }) %>
        </header>

        <main class="vaporwave-content">
            <article class="prose">
                <%- content %>
            </article>
        </main>

        <footer class="vaporwave-footer">
             <%- include('../components/footer', { config: config }) %>
        </footer>
    </div>

    <%- include('../components/math-support', { config: config }) %>

</body>
</html>
