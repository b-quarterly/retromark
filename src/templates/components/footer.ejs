<footer class="site-footer footer-<%= style %>">
  <div class="footer-container">
    <!-- Branding Area -->
    <div class="footer-brand">
      <% if (showLogo && site.logo) { %>
        <a href="<%= urlFor('/') %>" class="footer-logo">
          <img src="<%= urlFor(site.logo) %>" alt="<%= site.title %>">
        </a>
      <% } %>
      
      <% if (showTitle) { %>
        <div class="footer-title">
          <a href="<%= urlFor('/') %>"><%= site.title %></a>
        </div>
      <% } %>
      
      <% if (content) { 
        const year = new Date().getFullYear();
        const footerText = content
          .replace(/\{year\}/g, year)
          .replace(/\{title\}/g, site.title)
          .replace(/\{author\}/g, site.author);
      %>
        <div class="footer-text"><%- footerText %></div>
      <% } %>
    </div>
    
    <!-- Navigation Links -->
    <% if (showNav) { %>
      <nav class="footer-nav">
        <% if (nav) { %>
          <ul class="footer-links">
            <% nav.forEach(item => { %>
              <li class="<%= isCurrentPage(item.path) ? 'active' : '' %>">
                <a href="<%= urlFor(item.path) %>"><%= item.title %></a>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </nav>
    <% } %>
    
    <!-- Social Links -->
    <% if (social && social.length > 0) { %>
      <div class="footer-social">
        <div class="social-title">Follow Us</div>
        <ul class="social-links">
          <% social.forEach(link => { %>
            <li>
              <a href="<%= link.url %>" target="_blank" rel="noopener noreferrer" 
                 aria-label="<%= link.name %>" title="<%= link.name %>">
                <% if (link.icon) { %>
                  <i class="<%= link.icon %>"></i>
                <% } else { %>
                  <%= link.name %>
                <% } %>
              </a>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    
    <!-- Additional Info -->
    <div class="footer-meta">
      <% if (copyright) { %>
        <div class="copyright">
          Â© <%= new Date().getFullYear() %> <%= site.title %>. All rights reserved.
        </div>
      <% } %>
      
      <% if (showGenerator) { %>
        <div class="generator">
          Built with <a href="https://github.com/AItzazImtiaz/retromark" target="_blank">RetroMark</a>
        </div>
      <% } %>
    </div>
  </div>
  
  <!-- Back to Top Button -->
  <% if (backToTop) { %>
    <button class="back-to-top" aria-label="Back to top">
      <svg viewBox="0 0 24 24">
        <path d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6-6 6z"/>
      </svg>
    </button>
  <% } %>
</footer>
