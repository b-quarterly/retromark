<header class="site-header header-<%= style %> 
              <% if (position === 'fixed') { %>header-fixed<% } %>
              <% if (position === 'sticky') { %>header-sticky<% } %>">
  <!-- Logo Area -->
  <div class="header-brand">
    <% if (showLogo && site.logo) { %>
      <a href="<%= urlFor('/') %>" class="site-logo">
        <img src="<%= urlFor(site.logo) %>" alt="<%= site.title %>">
      </a>
    <% } %>
    
    <% if (showTitle) { %>
      <a href="<%= urlFor('/') %>" class="site-title">
        <%= site.title %>
      </a>
    <% } %>
  </div>

  <!-- Main Navigation -->
  <% if (showNav) { %>
    <nav class="main-nav">
      <ul>
        <% nav.forEach(item => { %>
          <li class="nav-item <%= isCurrentPage(item.path) ? 'active' : '' %> 
                     <%= item.children ? 'has-children' : '' %>">
            <a href="<%= urlFor(item.path) %>" class="nav-link">
              <%= item.title %>
              <% if (item.children) { %>
                <span class="dropdown-icon">â–¼</span>
              <% } %>
            </a>
            
            <% if (item.children) { %>
              <ul class="submenu">
                <% item.children.forEach(child => { %>
                  <li class="<%= isCurrentPage(child.path) ? 'active' : '' %>">
                    <a href="<%= urlFor(child.path) %>"><%= child.title %></a>
                  </li>
                <% }) %>
              </ul>
            <% } %>
          </li>
        <% }) %>
      </ul>
    </nav>
  <% } %>

  <!-- Utility Area -->
  <div class="header-utilities">
    <!-- Search Toggle -->
    <% if (features.search) { %>
      <button class="search-toggle" aria-label="Toggle search">
        <svg class="search-icon" viewBox="0 0 24 24">
          <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
        </svg>
      </button>
    <% } %>

    <!-- Dark Mode Toggle -->
    <% if (features.dark_mode) { %>
      <button class="theme-toggle" id="dark-mode-toggle" aria-label="Toggle dark mode">
        <svg class="sun-icon" viewBox="0 0 24 24">
          <path d="M12 9c1.65 0 3 1.35 3 3s-1.35 3-3 3-3-1.35-3-3 1.35-3 3-3m0-2c-2.76 0-5 2.24-5 5s2.24 5 5 5 5-2.24 5-5-2.24-5-5-5zM2 13h2c.55 0 1-.45 1-1s-.45-1-1-1H2c-.55 0-1 .45-1 1s.45 1 1 1zm18 0h2c.55 0 1-.45 1-1s-.45-1-1-1h-2c-.55 0-1 .45-1 1s.45 1 1 1zM11 2v2c0 .55.45 1 1 1s1-.45 1-1V2c0-.55-.45-1-1-1s-1 .45-1 1zm0 18v2c0 .55.45 1 1 1s1-.45 1-1v-2c0-.55-.45-1-1-1s-1 .45-1 1zM5.99 4.58c-.39-.39-1.03-.39-1.41 0-.39.39-.39 1.03 0 1.41l1.06 1.06c.39.39 1.03.39 1.41 0s.39-1.03 0-1.41L5.99 4.58zm12.37 12.37c-.39-.39-1.03-.39-1.41 0-.39.39-.39 1.03 0 1.41l1.06 1.06c.39.39 1.03.39 1.41 0 .39-.39.39-1.03 0-1.41l-1.06-1.06zm1.06-10.96c.39-.39.39-1.03 0-1.41-.39-.39-1.03-.39-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06zM7.05 18.36c.39-.39.39-1.03 0-1.41-.39-.39-1.03-.39-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06z"/>
        </svg>
        <svg class="moon-icon" viewBox="0 0 24 24">
          <path d="M20.21,15.32A8.56,8.56,0,1,1,11.29,3.5a.5.5,0,0,1,.51.28.49.49,0,0,1-.09.57A6.46,6.46,0,0,0,9.8,9a6.57,6.57,0,0,0,9.71,5.72.52.52,0,0,1,.58.07A.52.52,0,0,1,20.21,15.32Z"/>
        </svg>
      </button>
    <% } %>

    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" aria-label="Toggle navigation">
      <span class="menu-bar"></span>
      <span class="menu-bar"></span>
      <span class="menu-bar"></span>
    </button>
  </div>
</header>

<!-- Mobile Navigation Panel -->
<div class="mobile-nav-panel">
  <nav class="mobile-nav">
    <ul>
      <% nav.forEach(item => { %>
        <li class="<%= isCurrentPage(item.path) ? 'active' : '' %>">
          <a href="<%= urlFor(item.path) %>"><%= item.title %></a>
          <% if (item.children) { %>
            <button class="submenu-toggle">+</button>
            <ul class="mobile-submenu">
              <% item.children.forEach(child => { %>
                <li>
                  <a href="<%= urlFor(child.path) %>"><%= child.title %></a>
                </li>
              <% }) %>
            </ul>
          <% } %>
        </li>
      <% }) %>
    </ul>
  </nav>
</div>
